let mapleader=' '

set easymotion
set commentary
set ideajoin
set NERDTree

set incsearch
set ignorecase
set smartcase
set scrolloff=5
set showmode
set idearefactormode=keep

map <C-c> <ESC>

nmap <C-o> <Action>(Back)
nmap <C-i> <Action>(Forward)

nmap <C-f> <Action>(GotoFile)
nmap <leader>f <Action>(GotoFile)
nmap <leader>s <Action>(GotoSymbol)
nmap <leader>g <Action>(FindInPath)
nmap <leader>a <Action>(SearchEverywhere)

nmap [c <Action>(VcsShowPrevChangeMarker)
nmap ]c <Action>(VcsShowNextChangeMarker)
nmap [d <Action>(GotoPreviousError)
nmap ]d <Action>(GotoNextError)

nmap gi <Action>(GotoImplementation)
nmap <leader>rn <Action>(RenameElement)
nmap <leader>lf <Action>(ReformatCode)
nmap <leader>ca <Action>(ShowIntentionActions)

nmap ma <Action>(ToggleBookmarkA)
nmap 'a <Action>(GotoBookmarkA)
nmap ms <Action>(ToggleBookmarkS)
nmap 's <Action>(GotoBookmarkS)
nmap md <Action>(ToggleBookmarkD)
nmap 'd <Action>(GotoBookmarkD)
nmap mf <Action>(ToggleBookmarkF)
nmap 'f <Action>(GotoBookmarkF)

nmap <leader>e :NERDTreeFind<CR>

map s <Plug>(easymotion-bd-f2)
